<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <filter>
        <filter-name>SessaoUsuarioFilter</filter-name>
        <filter-class>com.allgreensolutions.sistema.controller.SessaoUsuarioFilter</filter-class>
    </filter>
    <filter>
        <filter-name>SessaoAtivaFilter</filter-name>
        <filter-class>com.allgreensolutions.sistema.controller.SessaoAtivaFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>SessaoAtivaFilter</filter-name>
        <url-pattern>/AllGreen</url-pattern>
        <url-pattern>/login.jsp</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>SessaoUsuarioFilter</filter-name>
        <url-pattern>/paginas/*</url-pattern>
    </filter-mapping>
    <servlet>
        <servlet-name>ValidarLoginServlet</servlet-name>
        <servlet-class>com.allgreensolutions.sistema.controller.ValidarLoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SairServlet</servlet-name>
        <servlet-class>com.allgreensolutions.sistema.controller.SairServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ValidarLoginServlet</servlet-name>
        <url-pattern>/ValidarLogin</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SairServlet</servlet-name>
        <url-pattern>/Sair</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>login.jsp</welcome-file>
    </welcome-file-list>
</web-app>
